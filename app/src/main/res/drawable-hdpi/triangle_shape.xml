<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate
            android:fromDegrees="50"
            android:toDegrees="20"
            android:pivotX="30%"
            android:pivotY="2%" >
            <shape
                android:shape="oval" >
                <stroke android:color="@color/appColor" android:width="10dp"/>
                <solid
                    android:color="@color/colorGolden" />
            </shape>
        </rotate>
    </item>
</layer-list>